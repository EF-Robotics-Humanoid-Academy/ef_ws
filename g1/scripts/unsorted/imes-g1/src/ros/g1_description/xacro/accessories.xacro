<?xml version="1.0"?>
<robot name="g1"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.001 0.001 0.001" />
            </geometry>
        </visual>
    </link>

    <joint name="base_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.8" />
        <parent link="base_link" />
        <child link="pelvis" />
    </joint>

</robot>